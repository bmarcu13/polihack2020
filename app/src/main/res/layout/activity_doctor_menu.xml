<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_doctor_menu"
    tools:context=".DoctorApp.DoctorMenuActivity">


    <Button
        android:id="@+id/buttonViewPatientsList"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/ripple_effect_button_startup"
        android:gravity="center"
        android:text="Patients list"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/buttonAddPatient"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/ripple_effect_button_startup"
        android:gravity="center"
        android:text="Add patient"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonViewPatientsList"
        app:layout_constraintStart_toStartOf="@+id/buttonViewPatientsList"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewPatientsList" />


    <Button
        android:id="@+id/buttonLogOutDoctor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="@string/doctor_account"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>